<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track Bus</title>
    <!-- Include Google Maps API script -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwIlUIsV8ejTXYg2jLsjpe5657kCwonPs&callback=initMap" async defer></script>
    <style>
        #map {
            height: 500px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <script>
        // Initialize the map
        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 10.5276, lng: 76.2144 }, // Default center coordinates
                zoom: 13 // Default zoom level
            });

            // Function to fetch bus locations from the server
            async function fetchBusLocations() {
                try {
                    const response = await fetch('/admin/bus-locations'); // Assuming this endpoint returns bus locations
                    const data = await response.json();
                    return data;
                } catch (error) {
                    console.error('Error fetching bus locations:', error);
                    return [];
                }
            }

            // Function to add markers for bus locations
            async function addBusMarkers() {
                const busLocations = await fetchBusLocations();
                busLocations.forEach(location => {
                    new google.maps.Marker({
                        position: { lat: location.latitude, lng: location.longitude },
                        map: map,
                        title: location.name
                    });
                });
            }

            // Call the function to add markers when the map is loaded
            addBusMarkers();
        }
    </script>
</body>
</html>
