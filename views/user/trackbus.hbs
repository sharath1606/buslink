<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map with Coordinates</title>
    <!-- Include Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        #map { height: 100vh; }
    </style>
</head>
<body>
    <div id="map"></div>
    <!-- Include Leaflet JavaScript -->
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        // Initialize the map
        var map = L.map('map').setView([0, 0], 2);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

        // Function to fetch coordinates from the server
        function fetchCoordinatesAndPlot() {
            fetch('/trackbus') // Fetch coordinates from server
                .then(response => response.json())
                .then(data => {
                    // Plot each coordinate on the map
                    data.forEach(coord => {
                        L.marker([10.5276,76.2144]).addTo(map);
                    });
                })
                .catch(error => console.error('Error fetching coordinates:', error));
        }
       L.marker([10.5276,76.2144]).addTo(map);
        // Call fetchCoordinatesAndPlot function to fetch and plot coordinates
        fetchCoordinatesAndPlot();

        // Optional: Refresh coordinates every 30 seconds
        setInterval(fetchCoordinatesAndPlot, 30000); // Adjust interval as needed
    </script>
</body>
</html>
